@model CiudadCreateUpdate.RequestModel

@{ 
    var provincias = (List<ProvinciaDto>)ViewData["Provincias"];
}

<form method="post" autocomplete="off">
    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-md-right text-sm-left">Nombre:</label>
        <div class="col-sm-8">
            <input asp-for="Nombre" class="form-control">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-md-right text-sm-left">Provincia:</label>
        <div class="col-sm-8">
            <select id="pais" asp-for="ProvinciaId" class="form-control w-auto">
                @foreach (var item in provincias.OrderBy(x => x.Codigo).ToList())
                {
                    <option value="@item.Id">@item.Nombre</option>
                }
            </select>
            <span asp-validation-for="ProvinciaId" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger offset-sm-2"></div>

    <div class="form-group row mt-3">
        <div class="col-sm-8 offset-sm-2">
            <div class="d-flex flex-row">
                <input class="btn btn-primary" type="submit" value="Guardar" />
                <a class="btn btn-outline-info ml-3" href="./Index">Regresar</a>
            </div>
        </div>
    </div>
</form>
